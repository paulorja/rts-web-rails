#game-content-left
  .content-title Mercado
  = render 'menu'

#game-content-right
  %h4 Ofertas de Outros Jogadores
  %table.table
    %thead
      %tr
        %th Jogador
        %th Oferece
        %th Procura
        %th Distancia
        %th
    %tbody
      - @offers.each do |o|
        %tr
          %td= o.user.login
          %td
            %span.icon-no-repeat.icon-small{class: "icon-#{o.offer_recourse}"}
            = o.offer_amount
          %td
            %span.icon-no-repeat.icon-small{class: "icon-#{o.return_recourse}"}
            = o.return_amount
          %td= Cell.point_distance(o.user.castle_x, o.user.castle_y, @current_user.castle_x, @current_user.castle_y)
          %td= link_to 'Aceitar', accept_offer_path(o.id)
