
#game-content-left
  = render 'menu'

#game-content-right.simplebar
  %table.table
    %thead
      %tr
        %th Pos.
        %th Soldado
        %th Jogador
        %th{style: 'width: 20px;'}
        %th Ataque
    %tbody
      - @soldiers.each_with_index do |s, i|
        %tr
          %td= (i+1).to_s
          %td= s.name
          %td= link_to(s.user.login, user_profile_path(s.user.login))
          %td
            - unit = Unit.get_unit(s.unit)
            %div.icon-no-repeat{style: 'width: 20px; height: 20px;', class: unit[:css_class]}
          %td= s.attack
