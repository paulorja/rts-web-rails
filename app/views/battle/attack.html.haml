#game-content-left
  = render 'menu'

#game-content-right.text-center.simplebar
  %h4 Selecione as tropas que v√£o para o ataque

  = form_tag('/battle/send_attack', method: :post) do
    = hidden_field_tag(:cell_id, params[:cell_id])
    %div
      %table.table
        - @armies.each do |a|
          - unit = Unit.get_unit(a.unit)
          %tr
            %td
              %label
                = check_box_tag('unit[]', a.id)
                = "#{a.name} (#{unit[:name]})"
                = "Atk: #{a.attack}"
                %span.sprite-unit{class: unit[:css_class]}
    %div
      %button.btn-lg{type: 'submit'} Atacar