- terrain = Terrain.get_terrain(@cell.terrain_code)
- building = Building.get_building(@cell.building_code)

.content-title
  - if building.nil?
    = terrain[:name]
  - else
    = building[:name]
    = '('+@cell.user.login+')'

= 'x: '+@cell.x.to_s+' y: '+@cell.y.to_s
%br


- if building.nil?
  - terrain[:buildings].each do |b|
    .build-container
      .build-icon{class: BUILDING[b][:css_class]}
      = link_to 'Construir '+BUILDING[b][:name], build_path(@cell.x, @cell.y, BUILDING[b][:code])

