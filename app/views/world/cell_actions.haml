- terrain = Terrain.get_terrain(@cell.terrain_code)
- building = Building.get_building(@cell.building_code)

.content-title
  - if building.nil?
    = terrain[:name]
  - else
    = building[:name]
    = " nÃ­vel #{@cell.building_level}"
    = '('+@cell.user.login+')'

= 'x: '+@cell.x.to_s+' y: '+@cell.y.to_s
%br


- if building.nil?
  - terrain[:buildings].each do |b|
    - building = Building.get_building(b)

    .build-container
      .build-icon{class: "#{building[:css_class]}-1"}
      .build-label
        = link_to 'Construir ', build_path(@cell.x, @cell.y, building[:code])
      .build-recourses
        - if building[:levels][1][:wood] and building[:levels][1][:wood].to_i > 0
          = image_tag 'sprites/icons/wood.png', width: 12
          = building[:levels][1][:wood]
        - if building[:levels][1][:stone] and building[:levels][1][:stone].to_i > 0
          = image_tag 'sprites/icons/stone.png', width: 12
          = building[:levels][1][:stone]
        - if building[:levels][1][:gold] and building[:levels][1][:gold].to_i > 0
          = image_tag 'sprites/icons/gold.png', width: 12
          = building[:levels][1][:gold]
        - if building[:levels][1][:diamond] and building[:levels][1][:diamond].to_i > 0
          = image_tag 'sprites/icons/diamond.png', width: 12
          = building[:levels][1][:diamond]
        = "Time: #{building[:levels][1][:time]}"